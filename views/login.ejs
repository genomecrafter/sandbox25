<%- include('partials/header') %>

<body onload="myFunction()" style="margin:0;">

    <div id="loader"></div>

    <div style="display:none;" id="myDiv" class="animate-bottom">
        <div class="row">
            <div class="login-box">
                <h1>Login</h1>
                <form action="/login" method="post">
                    <div class="textbox">
                        <i class="fas fa-user login-icons"></i>
                        <input type="email" placeholder="User-Name (Email)" name="username">
                    </div>
                    <div class="textbox">
                        <i class="fas fa-lock login-icons"></i>
                        <input type="password" placeholder="Password" name="password">
                    </div>
                    <button type="submit" class="btn btn-success">LOGIN</button>
                </form>

                <!-- Added spacing between buttons -->
                <div class="button-space"></div>

                <a class="btn btn-google" href="/auth/google">
                    <i class="fab fa-google"></i> Login with Google
                </a>

                <div class="button-space"></div>

                <a href="/register" class="login-link">Don't have an account? Sign Up</a>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script>
        function myFunction() {
            setTimeout(function() {
                document.getElementById("loader").style.display = "none";
                document.getElementById("myDiv").style.display = "block";
            }, 500);
        }
    </script>

    <style>
        /* Google Font */
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600&display=swap');

        /* General Styles */
        body {
            font-family: 'Montserrat', sans-serif;
            background: #0f0f0f;
            color: #fff;
            margin: 0;
            overflow: hidden;
        }

        /* Preloader */
        #loader {
            position: fixed;
            width: 100%;
            height: 100%;
            background: #000;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }
        #loader:after {
            content: "";
            width: 50px;
            height: 50px;
            border: 5px solid #0ff;
            border-top-color: transparent;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Page Content */
        #myDiv {
            display: none;
        }

        /* Login Box */
        .login-box {
            width: 400px;
            margin: 8% auto;
            padding: 40px;
            text-align: center;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.7);
        }

        .login-box h1 {
            font-size: 2rem;
            font-weight: 600;
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.8);
        }

        .textbox {
            position: relative;
            margin: 20px 0;
        }

        .textbox input {
            width: 100%;
            padding: 12px;
            background: rgba(255, 255, 255, 0.2);
            border: none;
            border-radius: 50px;
            font-size: 1rem;
            font-weight: 400;
            color: #fff;
            outline: none;
            box-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
            padding-left: 50px;
            font-family: 'Montserrat', sans-serif;
        }

        .textbox input::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        .login-icons {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #0ff;
            font-size: 1.2rem;
        }

        .btn-success {
            width: 100%;
            padding: 12px;
            font-size: 1.2rem;
            font-weight: 600;
            border-radius: 50px;
            background: #0ff;
            color: #000;
            transition: 0.3s;
            box-shadow: 0 0 10px rgba(0, 255, 255, 0.6);
            font-family: 'Montserrat', sans-serif;
        }

        .btn-success:hover {
            background: #00e6e6;
            transform: scale(1.05);
        }

        .btn-google {
            width: 100%;
            padding: 12px;
            font-size: 1.2rem;
            font-weight: 600;
            border-radius: 50px;
            background: #dd4b39;
            color: #fff;
            transition: 0.3s;
            font-family: 'Montserrat', sans-serif;
        }

        .btn-google:hover {
            background: #c1351d;
            transform: scale(1.05);
        }

        /* Added space between buttons */
        .button-space {
            height: 15px;
        }

        .login-link {
            display: block;
            margin-top: 15px;
            color: #0ff;
            font-size: 0.9rem;
            text-decoration: none;
            font-family: 'Montserrat', sans-serif;
            transition: 0.3s;
        }

        .login-link:hover {
            text-decoration: underline;
        }

    </style>

</body>
